<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.example.peacemaker.oneplayer.Music" />
        <import type="com.example.peacemaker.oneplayer.OneHandler" />
        <variable
            name="playMode"
            type="int" />
        <variable
            name="music"
            type="Music" />
        <variable
            name="isPlaying"
            type="boolean" />
        <variable
            name="isWhite"
            type="boolean"/>
        <variable
            name="isClickable"
            type="boolean"/>
        <variable
            name="currentColor"
            type="int"/>
        <variable
            name="currentTime"
            type="int"/>
        <variable
            name="duration"
            type="int"/>
        <variable
            name="handler"
            type="OneHandler"/>
    </data>
    <android.support.design.widget.CoordinatorLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="550dp">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/ablum_detail_appbar"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            >
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/albuim_detail_collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                android:fitsSystemWindows="true"
                bind:title="@{music.displayName}"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <ImageView
                    android:src="@{music.getMiddleAlbumArt()}"
                    android:id="@+id/one_albumlist_album_detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"  >
                </ImageView>
                <android.support.v7.widget.Toolbar
                    android:navigationIcon="@drawable/ic_arrow_back_white_48dp"
                    android:theme="@style/ToolbarTheme"
                    android:id="@+id/one_album_detail_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" >

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:requiresFadingEdge="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@id/ablum_detail_appbar"
            android:id="@+id/one_albumlist_album_detail_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <include
            layout="@layout/one_layout"
            bind:playMode="@{playMode}"
            bind:music="@{music}"
            bind:isPlaying="@{isPlaying}"
            bind:isWhite="@{isWhite}"
            bind:isClickable="@{isClickable}"
            bind:currentColor="@{currentColor}"
            bind:currentTime="@{currentTime}"
            bind:duration="@{duration}"
            bind:handler="@{handler}" />
    </android.support.design.widget.CoordinatorLayout>



</layout>