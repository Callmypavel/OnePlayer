<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="one.peace.oneplayer.global.config.Config"/>
        <variable
            name="config"
            type="Config" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/id_appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:layout_scrollFlags="scroll|enterAlways"
                app:titleTextColor="@color/WHITE"
                app:title="@string/sound_effect"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@{config.themeColor}" >
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <RelativeLayout
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_below="@id/id_appbarlayout"
            android:id="@+id/sound_effects_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sound_effect_switch_hint"
                android:text="@string/sound_effect_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Switch
                android:layout_marginLeft="16dp"
                android:checked="true"
                android:textOff="@string/close"
                android:textOn="@string/open"
                android:id="@+id/sound_effect_switch"
                android:layout_toEndOf="@id/sound_effect_switch_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ScrollView
            android:layout_below="@id/sound_effects_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/equailizer_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="10dp"
                        android:id="@+id/equalizer_field_tint"
                        android:text="@string/equalizer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.google.android.material.tabs.TabLayout
                        app:tabIndicatorColor="@color/colorPrimary"
                        app:tabSelectedTextColor="@color/BLACK"
                        app:tabGravity="fill"
                        android:id="@+id/id_tablayout"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"/>

                </LinearLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/bassboost_field"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/bassboost_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/bass" />

                    <SeekBar
                        android:id="@+id/bassboost_power_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/bassboost_text"
                        />

                    <TextView
                        android:id="@+id/bassboost_power_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/bassboost_power_seekbar"
                        android:text="@string/value" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/presetreverb_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/presetreverb_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/preset" />

                    <Spinner
                        android:id="@+id/presetreverb_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/presetreverb_text" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/virtualizer_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/virtualizer_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/virtualizer" />

                    <SeekBar
                        android:id="@+id/virtualizer_power_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/virtualizer_text" />

                    <TextView
                        android:id="@+id/virtualizer_power_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/virtualizer_power_seekbar"
                        android:text="@string/value" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/decay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/decay_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/decay" />
                    <SeekBar
                        android:id="@+id/decay_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/decay_text" />

                    <TextView
                        android:id="@+id/decay_value_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/decay_seekbar"
                        android:text="@string/timeMeasurement" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/decay"
                    android:id="@+id/decayHF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/decayHF_text"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/decayHF" />
                    <SeekBar
                        android:id="@+id/decayHF_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/decayHF_text" />

                    <TextView
                        android:id="@+id/decayHF_value_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/decayHF_seekbar"
                        android:text="@string/timeMeasurement" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/decayHF"
                    android:id="@+id/density"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/density_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/density" />
                    <SeekBar
                        android:id="@+id/density_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/density_text" />

                    <TextView
                        android:id="@+id/density_value_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/density_seekbar"
                        android:text="@string/value" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/density"
                    android:id="@+id/diffusion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/diffusion_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/diffusion" />
                    <SeekBar
                        android:id="@+id/diffusion_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/diffusion_text" />

                    <TextView
                        android:id="@+id/diffusion_value_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/diffusion_seekbar"
                        android:text="@string/value" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/diffusion"
                    android:id="@+id/reflectionDelay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/reflectionDelay_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/reflectionsDelay" />
                    <SeekBar
                        android:id="@+id/reflectionDelay_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/reflectionDelay_text" />

                    <TextView
                        android:id="@+id/reflectionDelay_value_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/reflectionDelay_seekbar"
                        android:text="@string/timeMeasurement" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/reflectionDelay"
                    android:id="@+id/reflectionLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/reflectionLevel_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/reflectionLevel" />
                    <SeekBar
                        android:id="@+id/reflectionLevel_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/reflectionLevel_text" />

                    <TextView
                        android:id="@+id/reflectionLevel_value_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/reflectionLevel_seekbar"
                        android:text="@string/value" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/reflectionLevel"
                    android:id="@+id/reverbDelay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/reverbDelay_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/reverbDelay" />
                    <SeekBar
                        android:id="@+id/reverbDelay_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/reverbDelay_text" />

                    <TextView
                        android:id="@+id/reverbDelay_value_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/reverbDelay_seekbar"
                        android:text="@string/timeMeasurement" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/reverbDelay"
                    android:id="@+id/reverbLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/reverbLevel_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/reverbLevel" />
                    <SeekBar
                        android:id="@+id/reverbLevel_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/reverbLevel_text" />

                    <TextView
                        android:id="@+id/reverbLevel_value_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/reverbLevel_seekbar"
                        android:text="@string/value" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/reverbLevel"
                    android:id="@+id/roomLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/roomLevel_text"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/roomLevel" />
                    <SeekBar
                        android:id="@+id/roomLevel_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/roomLevel_text" />

                    <TextView
                        android:id="@+id/roomLevel_value_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/roomLevel_seekbar"
                        android:text="@string/value" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/roomLevel"
                    android:id="@+id/roomHFLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/roomHFLevel_text"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:text="@string/roomHFLevel" />
                    <SeekBar
                        android:id="@+id/roomHFLevel_seekbar"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/roomHFLevel_text" />

                    <TextView
                        android:id="@+id/roomHFLevel_value_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/roomHFLevel_seekbar"
                        android:text="@string/value" />
                </RelativeLayout>

                <Button
                    android:background="@color/WHITE"
                    android:onClick="saveEffect"
                    android:id="@+id/save_sound_effects_button"
                    android:text="@string/save_sound_effects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</layout>