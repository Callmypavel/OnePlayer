<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="one.peace.oneplayer.global.config.Config"/>
        <variable
            name="config"
            type="Config" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:background="@{config.themeColor}"
            android:id="@+id/toolbar_textview"
            android:layout_width="match_parent"
            android:text="主题换肤"
            android:textSize="20sp"
            android:textColor="@color/WHITE"
            tools:background="@color/BLACK"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:layout_height="?attr/actionBarSize">

        </TextView>

        <TextView
            android:id="@+id/preview_textview"
            tools:background="@color/colorPrimary"
            android:layout_marginTop="50dp"
            android:layout_below="@id/toolbar_textview"
            android:textColor="@color/WHITE"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/preview"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <SeekBar
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:max="255"
            android:layout_below="@id/preview_textview"
            android:id="@+id/red_color_seekbar"
            android:layout_width="250dp"
            android:layout_height="30dp" />

        <SeekBar
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:max="255"
            android:layout_below="@id/red_color_seekbar"
            android:id="@+id/green_color_seekbar"
            android:layout_width="250dp"
            android:layout_height="30dp" />
        <SeekBar
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:max="255"
            android:layout_below="@id/green_color_seekbar"
            android:id="@+id/blue_color_seekbar"
            android:layout_width="250dp"
            android:layout_height="30dp" />

        <SeekBar
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:max="255"
            android:layout_below="@id/blue_color_seekbar"
            android:id="@+id/alpha_color_seekbar"
            android:layout_width="250dp"
            android:layout_height="30dp" />

        <TextView
            android:textSize="20sp"
            android:text="@string/color_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/red_color_seekbar"
            android:layout_toRightOf="@+id/red_color_seekbar"
            android:layout_toEndOf="@+id/red_color_seekbar"
            android:id="@+id/red_tint" />
        <TextView
            android:textSize="20sp"
            android:text="@string/color_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/green_color_seekbar"
            android:layout_toRightOf="@+id/green_color_seekbar"
            android:layout_toEndOf="@+id/green_color_seekbar"
            android:id="@+id/green_tint" />

        <TextView
            android:textSize="20sp"
            android:text="@string/color_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blue_tint"
            android:layout_alignTop="@+id/blue_color_seekbar"
            android:layout_toRightOf="@+id/blue_color_seekbar"
            android:layout_toEndOf="@+id/blue_color_seekbar" />

        <TextView
            android:textSize="20sp"
            android:text="@string/color_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alpha_tint"
            android:layout_alignTop="@+id/alpha_color_seekbar"
            android:layout_toRightOf="@+id/alpha_color_seekbar"
            android:layout_toEndOf="@+id/alpha_color_seekbar" />

        <Button
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:id="@+id/apply_button"
            android:textColor="@{config.themeColor}"
            android:background="@color/WHITE"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/alpha_color_seekbar"
            android:text="@string/apply_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</layout>