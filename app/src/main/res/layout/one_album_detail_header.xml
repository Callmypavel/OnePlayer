<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">
    <TextView
        android:id="@+id/one_albumlist_album_detail_singername"
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="25sp"
        android:text="@string/singer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/one_albumlist_album_detail_songsnumber"
        android:padding="10dp"
        android:text="@string/songs_number"
        android:layout_below="@+id/one_albumlist_album_detail_singername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>