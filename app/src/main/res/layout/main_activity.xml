<layout
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.example.peacemaker.oneplayer.Music" />
        <import type="com.example.peacemaker.oneplayer.MusicState" />
        <import type="com.example.peacemaker.oneplayer.OneClickHandler"/>
        <variable
            name="music"
            type="Music" />
        <variable
            name="musicState"
            type="MusicState"/>
        <variable
            name="handler"
            type="OneClickHandler"/>
    </data>
<android.support.v4.widget.DrawerLayout
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    android:layout_gravity="start"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include layout="@layout/main"
            bind:musicState="@{musicState}"
            bind:music="@{music}"
            bind:handler="@{handler}"/>
    <android.support.design.widget.NavigationView
        android:fitsSystemWindows="true"
        android:id="@+id/navigation_view"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/one_drawer_header"
        app:menu="@menu/drawer_menu"/>

    <!--<include layout="@layout/music_list" />-->
</android.support.v4.widget.DrawerLayout>
    </layout>
